<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <!-- The class performing the actual authentication given a key -->
  <bean id="authKeyManager" class="org.geoserver.security.AuthenticationKeyManager">
    <constructor-arg index="0" ref="geoServerSecurityManager" />
  </bean>

  <!-- The servlet filter that performs the authentication -->
  <bean id="authKeyFilter" class="org.geoserver.security.AuthenticationKeyFilter">
    <constructor-arg index="0" ref="authKeyManager" />
  </bean>
  

  <!-- The URL mangler injecting the authentication key back into the urls 
    generated by GeoServer -->
  <bean id="authKeyMangler" class="org.geoserver.security.AuthenticationKeyMangler" />

</beans>
