{
   "$schema":"https://json-schema.org/draft/2020-12/schema",

    "title":"picture marker symbol",
    "type":"object",
    "extends":{
        "$ref":"marker.json"
    },
    "properties":{
        "type":{
            "title":"marker type",
            "type":"string",
            "enum":["esriPMS"]
        },
        "url":{
            "title":"image url",
            "type":"string"
        },
        "imageData":{
            "title":"image data (base64)",
            "type":"string"
        },
        "contentType":{
            "title":"image content type",
            "type":"string"
        },
        "color":{
            "$ref":"color.json"
        },
        "width":{
            "title":"image width",
            "type":"number"
        },
        "height":{
            "title":"image height",
            "type":"number"
        },
        "angle":{
            "title":"angle",
            "type":"number"
        },
        "xoffset":{
            "title":"angle",
            "type":"number"
        },
        "yoffset":{
            "title":"angle",
            "type":"number"
        }
    },
    "required":["type","url","imageData","contentType","color","width","height"]
}