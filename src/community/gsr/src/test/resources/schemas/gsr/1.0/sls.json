{
   "$schema":"https://json-schema.org/draft/2020-12/schema",

    "title":"simple marker symbol",
    "type":"object",
    "extends":{
        "$ref":"marker.json"
    },
    "properties":{
        "type":{
            "title":"marker type",
            "type":"string",
            "enum":["esriSLS"]
        },
        "style":{
            "title":"marker style",
            "description":"value SHOULD be SLSDash, SLSDashDotDot, SLSDot, SLSNull, SLSSolid",
            "type":"string"
        },
        "color":{
            "$ref":"color.json"
        },
        "width":{
            "title":"width",
            "type":"number"
        }
    },
    "required":["type","style","color","width"]
}
