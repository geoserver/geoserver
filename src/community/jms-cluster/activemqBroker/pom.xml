      </activation>
      <dependencies>
        <dependency>
          <groupId>postgresql</groupId>
          <artifactId>postgresql</artifactId>
          <version>${postgres.version}</version>
        </dependency>
      </dependencies>
    </profile>
  </profiles>

</project>
