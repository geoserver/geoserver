<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans             
	     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd         
	     http://www.springframework.org/schema/context
	     http://www.springframework.org/schema/context/spring-context-3.0.xsd"
>

    <!-- <mvc:annotation-driven/> -->
    <context:component-scan base-package="org.geoserver.ogcapi.v1.stac"/>

    <!-- Bridges to have OGC services show up as OWS services too -->
    <bean id="stacServiceFactory" class="org.geoserver.ogcapi.APIServiceFactoryBean">
        <constructor-arg index="0" value="STAC"/>
        <constructor-arg index="1" value="1.0.0"/>
    </bean>
    <bean id="aggregatesCache" class="org.geoserver.ogcapi.v1.stac.AggregatesCache">
        <constructor-arg ref="geoServer"/>
        <constructor-arg ref="openSearchAccessProvider"/>
    </bean>

    <bean id="stacExtension" class="org.geoserver.platform.ModuleStatusImpl">
        <constructor-arg index="0" value="gs-oseo-stac"/>
        <constructor-arg index="1" value="GeoServer STAC API"/>
        <property name="category" value="PENDING"/>
        <property name="contact" value="andrea.aime@geosolutionsgroup.com"/>
    </bean>

</beans>
