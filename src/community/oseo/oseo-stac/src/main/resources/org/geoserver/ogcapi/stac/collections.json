{
  "collections": [
    {
      "id": "${name}",
      "title": "${title}",
      "description": "${description}",
      "crs": [
        "http://www.opengis.net/def/crs/OGC/1.3/CRS84"
      ],
      "stac_version": "$${env('stac_version', '1.0.0')}",
      "license": "${license}",
      "type": "Collection",
      "extent": {
        "spatial": {
          "bbox": [
            [
              "$${minx(footprint)}",
              "$${miny(footprint)}",
              "$${maxx(footprint)}",
              "$${maxy(footprint)}"
            ]
          ]
        },
        "temporal": {
          "interval": [
            [
              "${timeStart}",
              "${timeEnd}"
            ]
          ]
        }
      },
      "providers": [
        {
          "name": "GeoServer",
          "url": "https://www.geoserver.org/",
          "roles": [
            "host"
          ]
        }
      ],
      "assets": "${assets}",
      "links": [
        {
          "href": "$${serviceLink('ogcapi/stac/collections/%s', name)}",
          "rel": "self",
          "type": "application/json"
        },
        {
          "href": "$${serviceLink('ogcapi/stac')}",
          "rel": "root",
          "type": "application/json"
        },
        {
          "href": "$${serviceLink('ogcapi/stac')}",
          "rel": "parent",
          "type": "application/json"
        },
        {
          "href": "$${serviceLink('ogcapi/stac/collections/%s/items', name)}",
          "rel": "items",
          "type": "application/geo+json"
        },
        {
          "href": "$${serviceLink('ogcapi/stac/collections/%s/queryables', name)}",
          "rel": "http://www.opengis.net/def/rel/ogc/1.0/queryables",
          "type": "application/schema+json"
        }
      ]
    }
  ]
}