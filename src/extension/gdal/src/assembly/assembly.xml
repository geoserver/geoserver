<?xml version="1.0"?>
<assembly>
  <id>gdal-plugin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target</directory>
      <outputDirectory/>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*-sources.jar</exclude>
        <exclude>*-javadoc.jar</exclude>
        <exclude>*-tests.jar</exclude>
        <exclude>*-test-sources.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${geoserverBaseDir}/release/extensions/gdal</directory>
      <outputDirectory/>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/dependency</directory>
      <outputDirectory/>
      <includes>
        <include>*gt-imageio-ext-gdal*.jar</include>
        <include>*imageio-ext-gdal*.jar</include>
        <include>*imageio-ext-geocore*.jar</include>
        <include>*imageio-ext-imagereadmt*.jar</include>
        <include>gs-gdal-*.jar</include>
        <include>gdal-*.jar</include>
      </includes>
      <excludes>
        <exclude>*arcgrid*.jar</exclude>
        <exclude>*customstreams*.jar</exclude>
        <exclude>*imageio-ext-gdalgeotiff*.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${geoserverBaseDir}/release/target/html/licenses</directory>
      <outputDirectory>licenses</outputDirectory>
      <includes>
        <include>LGPL.html</include>
        <include>GEOTOOLS_NOTICE.html</include>
        <include>GPL.html</include>
        <include>NOTICE.html</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${geoserverBaseDir}/release/extensions/README.md</source>
      <outputDirectory/>
      <destName>README.txt</destName>
    </file>
    <file>
      <source>${geoserverBaseDir}/release/target/html/extensions/LICENSE.html</source>
      <outputDirectory/>
      <destName>LICENSE.html</destName>
    </file>
    <file>
      <source>${geoserverBaseDir}/release/target/html/extensions/README.html</source>
      <outputDirectory/>
      <destName>README.html</destName>
    </file>
  </files>
</assembly>
