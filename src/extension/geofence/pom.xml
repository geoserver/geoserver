<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- set parent pom to extension pom -->
  <parent>
    <groupId>org.geoserver</groupId>
    <artifactId>extension</artifactId>
    <version>3.0-SNAPSHOT</version>
  </parent>

  <groupId>org.geoserver.extension</groupId>
  <artifactId>gs-geofence-root</artifactId>
  <packaging>pom</packaging>
  <name>GeoFence security integration</name>

  <modules>
    <module>geofence</module>
  </modules>

  <profiles>

    <profile>
      <id>geofence-server</id>
      <activation>
        <property>
          <name>geofence</name>
        </property>
      </activation>
      <modules>
        <module>geofence-server</module>
      </modules>
    </profile>

    <profile>
      <id>geofence-wps</id>
      <activation>
        <property>
          <!-- this is ok when building from root: property (or profile) geofence will include the geofence-root
                    module, while wps will include geofence-wps, putting properties conditions in AND.
                    -->
          <name>wps</name>
        </property>
      </activation>
      <modules>
        <module>geofence-wps</module>
      </modules>
    </profile>

    <profile>
      <id>allExtensions</id>
      <modules>
        <module>geofence-server</module>
        <module>geofence-wps</module>
      </modules>
    </profile>

    <profile>
      <id>release</id>
      <modules>
        <module>geofence-server</module>
        <module>geofence-wps</module>
      </modules>
    </profile>

  </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.openrewrite.maven</groupId>
                <artifactId>rewrite-maven-plugin</artifactId>
                <version>6.21.1</version>
                <configuration>
                    <activeRecipes>
                        <!-- Jakarta -->
                        <recipe>org.openrewrite.java.migrate.jakarta.JavaxMigrationToJakarta</recipe>

                        <!-- Spring Framework 6.x -->
                        <recipe>org.openrewrite.java.spring.framework.UpgradeSpringFramework_6_0</recipe>
                        <recipe>org.openrewrite.java.spring.framework.UpgradeSpringFramework_6_1</recipe>
                        <recipe>org.openrewrite.java.spring.framework.UpgradeSpringFramework_6_2</recipe>

                        <!-- Spring Security 6 -->
                        <recipe>org.openrewrite.java.spring.security6.UpgradeSpringSecurity_6_0</recipe>

                        <!-- Hibernate to 6.x (pick highest you target before 7) -->
                        <recipe>org.openrewrite.hibernate.MigrateToHibernate65</recipe>
                    </activeRecipes>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.openrewrite.recipe</groupId>
                        <artifactId>rewrite-migrate-java</artifactId>
                        <version>3.19.0</version>
                    </dependency>
                    <dependency>
                        <groupId>org.openrewrite.recipe</groupId>
                        <artifactId>rewrite-spring</artifactId>
                        <version>6.16.0</version>
                    </dependency>
                    <dependency>
                        <groupId>org.openrewrite.recipe</groupId>
                        <artifactId>rewrite-hibernate</artifactId>
                        <version>2.13.0</version>
                    </dependency>
                </dependencies>
            </plugin>

        </plugins>
    </build>
</project>
