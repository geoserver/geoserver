<?xml version="1.0"?>
<assembly>
  <id>grib-plugin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target</directory>
      <outputDirectory/>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*-sources.jar</exclude>
        <exclude>*-javadoc.jar</exclude>
        <exclude>*-tests.jar</exclude>
        <exclude>*-test-sources.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>target/dependency</directory>
      <outputDirectory/>
      <includes>
        <include>gt-grib*.jar</include>
        <include>gt-netcdf*.jar</include>
        <include>gt-unidata*.jar</include>
        <include>gt-coverage-api*.jar</include>
        <include>netcdf*.jar</include>
        <include>cdm*.jar</include>
        <include>udunits*.jar</include>
        <include>grib*.jar</include>
        <include>joda-time*.jar</include>
        <include>jsoup*.jar</include>
        <include>jcip-annotations*.jar</include>
        <include>ehcache-core*.jar</include>
        <include>gt-jdbc-h2*.jar</include>
        <include>hatbox*.jar</include>
        <include>geodb*.jar</include>
        <include>bufr*.jar</include>
        <include>protobuf-java*.jar</include>
        <include>c3p0*.jar</include>
        <include>quartz*.jar</include>
        <include>jna*.jar</include>
        <include>jdom2*.jar</include>
        <include>jj2000*.jar</include>
        <include>jcommander*.jar</include>
        <include>opendap*.jar</include>
        <include>http*.jar</include>
        <include>h2-*.jar</include>
      </includes>
      <excludes>
        <exclude>gs-netcdf-out*.jar</exclude>
        <exclude>jettison*.jar</exclude>
        <exclude>log4j-over-slf4j*.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${geoserverBaseDir}/release/target/html/licenses</directory>
      <outputDirectory>licenses</outputDirectory>
      <includes>
        <include>LGPL.html</include>
        <include>GEOTOOLS_NOTICE.html</include>
        <include>GPL.html</include>
        <include>NOTICE.html</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${geoserverBaseDir}/release/extensions/README.md</source>
      <outputDirectory/>
      <destName>README.txt</destName>
    </file>
    <file>
      <source>${geoserverBaseDir}/release/target/html/extensions/LICENSE.html</source>
      <outputDirectory/>
      <destName>LICENSE.html</destName>
    </file>
    <file>
      <source>${geoserverBaseDir}/release/target/html/extensions/README.html</source>
      <outputDirectory/>
      <destName>README.html</destName>
    </file>
  </files>
</assembly>
