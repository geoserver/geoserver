<?xml version="1.0"?>
<assembly>
  <id>importer-plugin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target/dependency</directory>
      <outputDirectory/>
      <includes>
        <include>gs-importer-core-*.jar</include>
        <include>gs-importer-web-*.jar</include>
        <include>gs-importer-rest-*.jar</include>
        <include>gt-xsd-kml-*.jar</include>
        <include>gt-csv-*.jar</include>
        <include>*javacsv*</include>
        <include>*prettytime*</include>
        <include>*fileupload*</include>
        <include>*commons-vfs2*</include>
        <include>*commons-exec*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${geoserverBaseDir}/release/target/html/licenses</directory>
      <outputDirectory>licenses</outputDirectory>
      <includes>
        <include>LGPL.html</include>
        <include>GEOTOOLS_NOTICE.html</include>
        <include>GPL.html</include>
        <include>NOTICE.html</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${geoserverBaseDir}/release/extensions/README.md</source>
      <outputDirectory/>
      <destName>README.txt</destName>
    </file>
    <file>
      <source>${geoserverBaseDir}/release/target/html/extensions/LICENSE.html</source>
      <outputDirectory/>
      <destName>LICENSE.html</destName>
    </file>
    <file>
      <source>${geoserverBaseDir}/release/target/html/extensions/README.html</source>
      <outputDirectory/>
      <destName>README.html</destName>
    </file>
  </files>
</assembly>
