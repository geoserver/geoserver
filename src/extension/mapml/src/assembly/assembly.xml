<?xml version="1.0"?>
<assembly>
  <id>mapml-plugin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target</directory>
      <outputDirectory/>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*-sources.jar</exclude>
        <exclude>*-javadoc.jar</exclude>
        <exclude>*-tests.jar</exclude>
        <exclude>*-test-sources.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>target/dependency</directory>
      <outputDirectory/>
      <includes>
        <include>spring-oxm*.jar</include>
        <include>org.eclipse.persistence*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>release/html/mapml</directory>
      <outputDirectory/>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${geoserverBaseDir}/release/target/html/licenses</directory>
      <outputDirectory>licenses</outputDirectory>
      <includes>
        <include>GPL.html</include>
        <include>NOTICE.html</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${geoserverBaseDir}/release/target/html/extensions/mapml/mapml-LICENSE.html</source>
      <outputDirectory/>
      <destName>LICENSE.html</destName>
    </file>
    <file>
      <source>${geoserverBaseDir}/release/target/html/extensions/mapml/mapml-README.html</source>
      <outputDirectory/>
      <destName>README.html</destName>
    </file>
  </files>
</assembly>
