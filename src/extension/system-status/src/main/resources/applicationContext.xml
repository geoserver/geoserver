  <context:component-scan base-package="org.geoserver.system.status.rest"/>
  <context:component-scan base-package="org.geoserver.system.status.collector"/>

  <bean id="systemStatusMonitorTab" class="org.geoserver.system.status.web.SystemStatusTab"/>

  <bean class="org.geoserver.platform.ModuleStatusImpl">
    <constructor-arg index="0" value="gs-system-status"/>
    <constructor-arg index="1" value="GeoServer System Status"/>
  </bean>

</beans>
