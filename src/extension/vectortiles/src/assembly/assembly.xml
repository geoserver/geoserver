<?xml version="1.0"?>
<assembly>
  <id>vectortiles-plugin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target</directory>
      <outputDirectory/>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*-sources.jar</exclude>
        <exclude>*-javadoc.jar</exclude>
        <exclude>*-tests.jar</exclude>
        <exclude>*-test-sources.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>target/dependency</directory>
      <outputDirectory/>
      <includes>
        <include>java-vector-tile*.jar</include>
        <include>gson*.jar</include>
        <include>protobuf-java*.jar</include>
        <include>gt-process-geometry*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${geoserverBaseDir}/release/target/html/licenses</directory>
      <outputDirectory>licenses</outputDirectory>
      <includes>
        <include>LGPL.html</include>
        <include>GEOTOOLS_NOTICE.html</include>
        <include>GPL.html</include>
        <include>NOTICE.html</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${geoserverBaseDir}/release/target/html/extensions</directory>
      <outputDirectory/>
      <includes>
        <include>README.html</include>
        <include>LICENSE.html</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
