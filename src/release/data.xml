<assembly>
  <id>data</id>
  <formats>
       <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
   <fileSets>
    <fileSet>
      <!-- the main webapp -->
      <directory>../data/release</directory>
      <outputDirectory>geoserver_data</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
      <excludes>
        <!-- see data/.gitignore -->
        <exclude>gwc/**</exclude>
        <exclude>gwc-gs.xml</exclude>
        <exclude>gwc-layers/**</exclude>
        <exclude>logs/**</exclude>
        <exclude>security/geoserver.jceks</exclude>
        <exclude>security/masterpw.digest</exclude>
        <exclude>security/version.properties</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>release/target/html/licenses</directory>
      <outputDirectory>licenses</outputDirectory>
      <includes>
        <include>GPL.html</include>
        <include>NOTICE.html</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
     <file>
       <source>release/extensions/README.md</source>
       <outputDirectory></outputDirectory>
       <destName>README.txt</destName>
     </file>
     <file>
       <source>release/target/html/extensions/LICENSE_GS.html</source>
       <outputDirectory></outputDirectory>
       <destName>LICENSE.html</destName>
     </file>
     <file>
       <source>release/target/html/extensions/README.html</source>
       <outputDirectory></outputDirectory>
       <destName>README.html</destName>
     </file>
  </files>
</assembly>