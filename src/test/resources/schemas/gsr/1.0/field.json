{
    "$schema":"http://json-schema.org/draft-03/schema#",
    "id":"http://schemas.opengis.net/gsr/1.0/field.json",
    "title":"field",
    "type":"object",
    "properties":{
       "name":{
          "title":"field name",
          "type":"string",
          "required":true
       },
       "type":{
          "title":"value type",
          "type":"string",
          "required":true
       },
       "alias":{
          "title":"alias of the field name for display purposes",
          "type":["null","string"]
       },
       "length":{
          "title":"length of the field",
          "type":"integer"
       }
    }
}